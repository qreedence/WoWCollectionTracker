@code {
    [Parameter]
    public string Patch { get; set; }

    [Parameter]
    public EventCallback<string> PatchChanged { get; set; }

    public async Task OnPatchChanged(ChangeEventArgs e)
    {
        Patch = e.Value.ToString();
        await PatchChanged.InvokeAsync(Patch);
        Console.WriteLine($"Patch changed to: {Patch}");
    }
}
