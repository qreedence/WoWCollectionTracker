<div>
    <select value="@Patch" @onchange="OnPatchChanged">
        <option value="" disabled selected>Select a patch</option>
        <option value="11.0">11.0</option>
        <option value="10.2.7">10.2.7</option>
        <option value="10.2.6">10.2.6</option>
